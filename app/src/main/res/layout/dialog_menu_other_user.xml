<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_report_user"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="@string/report_user"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/tv_mute_notifications"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="@string/mute_notifications"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/tv_delete_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="@string/block"
                android:textColor="@color/black" />

<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="@dimen/dp_1"-->
<!--                android:background="@color/grey" />-->

<!--            <TextView-->
<!--                android:id="@+id/tv_share_video"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="@dimen/dp_50"-->
<!--                android:fontFamily="@font/poppins_light"-->
<!--                android:gravity="center"-->
<!--                android:text="Turn On Post Notifications"-->
<!--                android:textColor="@color/black" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey" />



            <TextView
                android:id="@+id/tv_cancel_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>