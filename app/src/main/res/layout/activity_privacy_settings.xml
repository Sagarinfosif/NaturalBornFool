<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.pureway.cinemaflix.activity.PrivacySettingsActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/img_back_privacy_settings"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sp_10"
            android:padding="@dimen/dp_3"
            android:src="@drawable/ic_keyboard_backspace_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/privacy_settings"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/grey" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:text="@string/account"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_vertical"
                android:onClick="manageaccount"
                android:visibility="gone"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/manage_my_account"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_vertical"
                android:onClick="privacyandsafety"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/privacy_and_safety"
                android:textColor="@color/black" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_medal"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_vertical"
                android:onClick="photofit_badge"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/photofit_badge"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_wallet"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_vertical"
                android:onClick="balance"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/balance"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_share_black_24dp"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_vertical"
                android:onClick="shareProfile"
                android:paddingVertical="@dimen/dp_5"
                android:text="Share NATURAL BORN FOOL"
                android:textColor="@color/black" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_bars_code"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_vertical"
                android:onClick="code"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/code"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_gift"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:onClick="gift"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/gift"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_10"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_verify_account"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_vertical"
                android:onClick="verify"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/verify_account"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/lightgrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:text="@string/general"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_notifications_none_black_24dp"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_vertical"
                android:onClick="pushNotifications"
                android:paddingVertical="@dimen/dp_5"
                android:text="Notifications"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_translate"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_vertical"
                android:onClick="language"
                android:visibility="gone"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/language"
                android:textColor="@color/black" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_vertical"
                android:onClick="accessibilty"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/accessibility"
                android:textColor="@color/black"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_globe_grid"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_vertical"
                android:onClick="dataSaver"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/data_saver"
                android:textColor="@color/black"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/lightgrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:text="@string/support"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_pencil"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_vertical"
                android:onClick="reportProblem"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/report_a_problem"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_about"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_info"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/dp_5"
                android:text="About"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_information"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_vertical"
                android:onClick="helpCenter"
                android:paddingVertical="@dimen/dp_5"
                android:visibility="gone"
                android:text="@string/help_center"
                android:textColor="@color/black" />

            <!--            <TextView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginLeft="@dimen/dp_5"-->
            <!--                android:layout_marginTop="@dimen/dp_10"-->
            <!--                android:drawableLeft="@drawable/ic_shield"-->
            <!--                android:drawablePadding="@dimen/dp_10"-->
            <!--                android:fontFamily="@font/poppins_light"-->
            <!--                android:gravity="center_vertical"-->
            <!--                android:text="@string/safety_center"-->
            <!--                android:textColor="@color/black" />-->

            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_40"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/ic_logout"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/logout"
                android:textColor="@color/black" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>