<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_my_options"
                android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:minHeight="@dimen/dp_50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/spinnerComment"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/who_can_comment_on_your_videos"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/spinnerComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:entries="@array/spinnerAllEveryone" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/lightgrey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:minHeight="@dimen/dp_50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/spinnerReact"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/who_can_react_to_your_videos"
                    android:textColor="@color/black"
                     />

                <Spinner
                    android:id="@+id/spinnerReact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:entries="@array/spinnerAllEveryone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/lightgrey" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:minHeight="@dimen/dp_50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/spinnerDuetVid"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/who_can_duet_with_your_videos"
                    android:textColor="@color/black"
                     />

                <Spinner
                    android:id="@+id/spinnerDuetVid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:entries="@array/spinnerAllEveryone" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/lightgrey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:minHeight="@dimen/dp_50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/spinnerDirectMessage"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/who_can_send_you_direct_message"
                    android:textColor="@color/black"
                    />

                <Spinner
                    android:id="@+id/spinnerDirectMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:entries="@array/spinnerAllEveryone" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/lightgrey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:minHeight="@dimen/dp_50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/spinnerDownloadAble"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/allow_your_videos_to_be_downloaded"
                    android:textColor="@color/black"
                     />

                <Spinner
                    android:id="@+id/spinnerDownloadAble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:entries="@array/onOFF" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/lightgrey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:minHeight="@dimen/dp_50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/spinnerCanViewLikeVid"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/who_can_view_your_like_videos"
                    android:textColor="@color/black"
                    />

                <Spinner
                    android:id="@+id/spinnerCanViewLikeVid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:entries="@array/spinnerAllEveryone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/lightgrey" />





        </LinearLayout>
            <TextView
                android:id="@+id/tv_delete_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="@string/delete_video"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_share_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="@string/share_video"
                android:textColor="@color/black" />

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/tv_cancel_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
