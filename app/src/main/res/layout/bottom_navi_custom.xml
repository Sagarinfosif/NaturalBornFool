<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:clickable="true"
    android:gravity="center_vertical"
    android:weightSum="5">

    <ImageView
        android:id="@+id/navi_home"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/dp_5"
        android:src="@drawable/ic_home_bottom"
        android:tint="@color/grey" />

    <ImageView
        android:id="@+id/navi_search"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/dp_5"
        android:src="@drawable/ic_search_black_24dp"
        android:tint="@color/grey" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
       >
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/navi_video"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/round_corner_bg"
            android:padding="@dimen/dp_5"
            android:backgroundTint="@color/purple"
            android:src="@drawable/upload_icon"
            android:tint="@color/white" />

<!--        <ImageView-->
<!--            android:background="@drawable/round_corner_bg1"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:id="@+id/navi_video"-->
<!--            android:layout_width="@dimen/dp_30"-->
<!--            android:layout_height="@dimen/dp_30"-->
<!--            android:src="@drawable/upload_icon"/>-->

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/rl_not_badge"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/circle_noti"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_noti_badge_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/navi_noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_notifications_bottom"
            android:tint="@color/grey" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/navi_profile"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/dp_5"
        android:src="@drawable/ic_user_bottom"
        android:tint="@color/grey" />

</LinearLayout>