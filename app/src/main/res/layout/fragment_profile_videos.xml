<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="in.pureway.cinemaflix.fragments.homefrags.ProfileVideosFragment">

   <com.google.android.material.card.MaterialCardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       app:cardUseCompatPadding="true"
       android:id="@+id/card_no_videos"
       android:visibility="gone"
       android:layout_marginHorizontal="@dimen/dp_20"
       app:cardCornerRadius="@dimen/dp_10">

      <TextView
          android:layout_margin="@dimen/dp_30"
          android:layout_width="wrap_content"
          android:layout_gravity="center"
          android:textColor="@color/black"
          android:layout_height="wrap_content"
          android:text="No Videos"
          android:fontFamily="@font/poppins_light"
          />

   </com.google.android.material.card.MaterialCardView>

   <androidx.recyclerview.widget.RecyclerView
       android:visibility="visible"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
       app:spanCount="3"
       android:id="@+id/recycler_videos_profile"
       android:nestedScrollingEnabled="true"
       tools:listitem="@layout/list_videos_profile"/>

</FrameLayout>