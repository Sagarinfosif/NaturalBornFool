<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="in.pureway.cinemaflix.activity.WalletActivity">

    <RelativeLayout
        android:id="@+id/rl_topbar"
        android:background="@drawable/bg_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingHorizontal="@dimen/dp_15"
                android:layout_height="@dimen/dp_40">

                <ImageView
                    android:padding="@dimen/dp_5"
                    android:id="@+id/iv_backArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_baseline_arrow_back_24"/>


                <TextView
                    android:layout_toRightOf="@id/iv_backArrow"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Wallet"
                    android:textSize="@dimen/sp_24"
                    android:textColor="@color/white"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:tint="@color/white"
                    android:src="@drawable/ic_baseline_credit_card_24"  />

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="@dimen/dp_30"
                android:padding="@dimen/dp_20"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/tv_coinBalance"
                        android:drawableLeft="@drawable/ic_coinz"
                        android:gravity="center"
                        android:drawablePadding="@dimen/dp_15"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="368"
                        android:textSize="20sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:drawableTint="@color/white"
                        android:layout_height="wrap_content"
                        android:text="Coins Balance"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_getCoins"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dp_15"
                    android:paddingVertical="@dimen/dp_7"
                    android:textStyle="bold"
                    android:text="Get Coins"
                    android:background="@drawable/bg_round_white"
                    android:textSize="16sp"
                    android:textColor="@color/purple"/>


            </RelativeLayout>

            <LinearLayout
                android:visibility="gone"
                android:paddingVertical="@dimen/dp_20"
                android:weightSum="9"
                android:paddingHorizontal="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:paddingVertical="@dimen/dp_30"
                    android:background="@drawable/bg_round_trans"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:src="@drawable/ic_wallet"
                        android:tint="@color/purple"
                        android:layout_width="wrap_content"
                        android:background="@drawable/circle_bg_white"
                        android:padding="@dimen/dp_15"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textStyle="bold"
                        android:text="Income"
                        android:textSize="13sp"
                        android:textColor="@color/white"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:paddingVertical="@dimen/dp_30"
                    android:background="@drawable/bg_round_trans"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:src="@drawable/ic_gift"
                        android:tint="@color/purple"
                        android:layout_width="wrap_content"
                        android:background="@drawable/circle_bg_white"
                        android:padding="@dimen/dp_15"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textStyle="bold"
                        android:text="Gift History"
                        android:textSize="13sp"
                        android:textColor="@color/white"/>


                </LinearLayout>


                <LinearLayout
                    android:paddingVertical="@dimen/dp_30"
                    android:background="@drawable/bg_round_trans"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:src="@drawable/ic_checklist"
                        android:tint="@color/purple"
                        android:layout_width="wrap_content"
                        android:background="@drawable/circle_bg_white"
                        android:padding="@dimen/dp_15"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textStyle="bold"
                        android:text="Check"
                        android:textSize="13sp"
                        android:textColor="@color/white"/>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_below="@id/rl_topbar"
        android:id="@+id/tablayoutGift"
        android:layout_width="match_parent"
        app:tabTextColor="@color/darkgrey"
        app:tabSelectedTextColor="@color/purple"
        app:tabIndicatorColor="@color/purple"
        android:layout_height="wrap_content"/>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerGift"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tablayoutGift"/>


</RelativeLayout>