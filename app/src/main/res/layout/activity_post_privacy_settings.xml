<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.pureway.cinemaflix.activity.videoEditor.activity.PostPrivacySettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/img_back_privacy"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:onClick="back"
            android:padding="@dimen/dp_3"
            android:scaleType="fitXY"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            android:tint="@color/black" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/privacy_settings"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/grey"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/ic_comment"
            android:drawablePadding="@dimen/dp_5"
            android:fontFamily="@font/poppins_light"
            android:gravity="center_vertical"
            android:text="@string/allow_comments"
            android:textColor="@color/black" />

        <Switch
            android:id="@+id/switch_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/purple"
            android:trackTint="@color/purple"
            android:checked="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/lightgrey" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/ic_duet"
            android:drawablePadding="@dimen/dp_5"
            android:fontFamily="@font/poppins_light"
            android:gravity="center_vertical"
            android:text="@string/allow_duet_and_react"
            android:textColor="@color/black" />

        <Switch
            android:id="@+id/switch_duet_react"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/purple"
            android:trackTint="@color/purple"
            android:checked="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/lightgrey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/ic_down_arrow"
            android:drawablePadding="@dimen/dp_5"
            android:fontFamily="@font/poppins_light"
            android:gravity="center_vertical"
            android:text="@string/allow_downloads"
            android:textColor="@color/black" />

        <Switch
            android:id="@+id/switch_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/purple"
            android:trackTint="@color/purple"
            android:checked="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/lightgrey" />

</LinearLayout>