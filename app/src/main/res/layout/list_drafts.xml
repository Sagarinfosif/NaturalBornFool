<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_draft_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="@string/edited_within_this_week"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/imgsond"
            android:layout_width="@dimen/sp_16"
            android:layout_height="@dimen/sp_16"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/sound_1"
            android:tint="@color/purple" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/imgsond"
            android:fontFamily="@font/poppins_light"
            android:text="Love Song"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_delete_drafts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_toLeftOf="@id/tv_post_drafts"
            android:fontFamily="@font/poppins_light"
            android:padding="@dimen/dp_3"
            android:text="@string/remove"
            android:textColor="@color/purple" />

        <TextView
            android:id="@+id/tv_post_drafts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:fontFamily="@font/poppins_light"
            android:padding="@dimen/dp_3"
            android:text="@string/post"
            android:textColor="@color/purple" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_drafts"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:scaleType="fitXY"
            android:src="@drawable/poat" />

        <EditText
            android:id="@+id/et_add_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_light"
            android:gravity="start"
            android:hint="@string/add_a_description"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/lightgrey" />

</LinearLayout>
