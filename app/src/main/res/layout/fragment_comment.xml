<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="@dimen/dp_5"

    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:context="in.pureway.cinemaflix.fragments.homefrags.CommentFragment">




    <LinearLayout
        android:id="@+id/bottom_sheet_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_comments"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:nestedScrollingEnabled="true"
        android:orientation="vertical"
        android:visibility="visible"
        app:behavior_hideable="true"
        app:behavior_peekHeight="@dimen/dp_400"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
        app:layout_collapseMode="pin">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_light"
                android:text="@string/comments"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold"
                android:textColor="@color/black" />


        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_40"
            android:visibility="gone"

            android:layout_marginHorizontal="@dimen/dp_20"
            app:cardCornerRadius="@dimen/dp_10">


            <TextView
                android:id="@+id/tv_private"
                style="@style/text15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_14"
                android:padding="@dimen/dp_40"
                android:text="This video is private video"
                android:textColor="@color/black"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_no_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_30"
                android:fontFamily="@font/poppins_light"
                android:text="@string/no_comments"
                android:textColor="@color/black" />

        </com.google.android.material.card.MaterialCardView>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:fillViewport="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:nestedScrollingEnabled="true"
                android:orientation="vertical"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/list_comments" />

        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/rl_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:padding="@dimen/dp_5">

            <EditText
                android:id="@+id/et_add_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_toLeftOf="@+id/img_send_comment"
                android:background="@drawable/grey_stroke"
                android:ellipsize="end"
                android:focusedByDefault="true"
                android:fontFamily="@font/poppins_light"
                android:hint="@string/add_a_comment"
                android:imeOptions="actionSend"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/img_send_comment"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/send" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>